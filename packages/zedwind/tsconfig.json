{
	"include": ["src/**/*", "rollup.config.mjs", "./package.json"],
	"compilerOptions": {
		"lib": ["es2021"],
		"module": "esnext",
		"target": "es2021",
		"rootDir": ".",
		"outDir": "./dist",
		"allowJs": true,
		"checkJs": true,
		"tsBuildInfoFile": ".cache/.tsbuildinfo",
		"incremental": true,
		"declaration": true,
		"declarationDir": "./dist",
		"sourceMap": true,
		"isolatedModules": true,
		"strict": true,
		"noEmit": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"preserveWatchOutput": true,
	},
}
